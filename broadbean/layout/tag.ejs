<div class="main-tags">
  <article>
    <h2><%= page.tag %></h2>
    <% page.posts.each(function(tag) { %>
      <section>
        <div class="item">
          <time datetime="<%- date_xml(tag.date) %>">
            <small><%= date(tag.date, 'YYYY-MM-DD') %></small>
          </time>
          <a href="<%=url_for(tag.canonical_path)%>">
            <%= tag.title || 'no title'%>
          </a>
        </div>
      </section>
    <% }) %>
  </article>
  <%- partial('_partials/pagination') %>
</div>
