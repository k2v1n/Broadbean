<header id="header">
    <div id="header-inner" class="header-inner">
      <div id="header-title">
        <!-- title -->
        <div id="logo-wrap">
          <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
        </div>
        <!-- subtitle -->
<!--         <% if (theme.subtitle){ %>
          <h2 id="subtitle-wrap">
            <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
          </h2>
        <% } %> -->
      </div>
      <nav id="header-nav">
        <ul>
          <% for (var i in theme.menu) { %>
            <li>
              <a class="" href="<%- url_for(theme.menu[i]) %>"><%= __(i) %></a>
            </li>
          <% } %>
          <% if (theme.local_search) { %>
            <li id="site-search-btn">
              <a href="javascript:void(0)">
                <%= __('search') %> 
              </a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
</header>

