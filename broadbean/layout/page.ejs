<!-- tags -->
<% if (page.type === 'tags'){ %>
  <div class="main-tags">
    <article>
    
      <h1><%=page.title%></h1>
      <%site.tags.each(function(tag){%>
        <% if (tag.length > 0) { %>
          <a href="<%- url_for(tag.path) %>">
            <span><%= tag.name %></span>
            <span>(<%= tag.length %>)</span>
          </a>
        <% } %>
      <% }) %> 
    </article>
  </div>    
  
<!-- categories -->
<% } else if (page.type === 'categories'){ %>

  <div class="main-categories">
    <article>
      <h1><%= page.title %></h1>
      <% site.categories.each(function(cate){ %>
        <% if (cate.length > 0) { %>
    
          <a href="<%- url_for(cate.path) %>">
            <span><%= cate.name %></span>
            <span><%= cate.length %></span>
          </a>

        <% } %>
      <% }) %>
    </article>
  </div>

<% } %>

