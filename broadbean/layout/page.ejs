<!-- tags -->
<% if (page.type === 'tags'){ %>
  <div class="main-tags cell">
    <article>
      <h1><%= __(page.title) %></h1>
      <%site.tags.each(function(tag){%>
        <% if (tag.length > 0) { %>
          <a class="tag" href="<%- url_for(tag.path) %>">
            <span><%= tag.name %></span>
            <small>(<%= tag.length %>)</small>
          </a>
        <% } %>
      <% }) %> 
    </article>
  </div>    
  
<!-- categories -->
<% } else if (page.type === 'categories'){ %>
  <div class="main-categories cell">
    <article>
      <h1><%= __(page.title) %></h1>
      <% site.categories.each(function(cate){ %>
        <% if (cate.length > 0) { %>
    
          <a class="category" href="<%- url_for(cate.path) %>">
            <span><%= cate.name %></span>
            <small>(<%= cate.length %>)</small>
          </a>

        <% } %>
      <% }) %>
    </article>
  </div>

<% } %>

