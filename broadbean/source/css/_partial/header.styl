#header {
    padding: 30px 0;
    min-height: 120px;
    text-shadow: 0 0 2px rgba(0,0,0,0.01);
    .header-inner {
        width: calc(100% - 80px);
        max-width: 1700px;
        margin: auto;
        overflow: hidden;
    }
    &:after {
        content: "";
        clear: both;
        display: block;
    }
}

#header #header-title {
    height: 40px;
    position: relative;
    float: left;
    font-weight: 600;
    text-align: center;
    display: inline-block;
    margin-right: -1rem;
    a {
        position: relative;
        font-family: "Roboto", "PingFang SC", "Noto Sans CJK SC", "Microsoft YaHei", sans-serif;
        letter-spacing: 1rem
        text-align: center;
        word-break: break-all;
        font-size: 2rem;
        line-height: 40px;
    }
}

#header #header-nav {
    float: right;
    ul {
        margin-left: 0;
        border-radius: 2px;
        font-size: 0.875rem;
        list-style: none;
        margin-right: -6px;
        li {
            margin:0 6px;
            display: inline-block;
            a,div {
                border-radius: 4px;
                padding: 10px 10px;
                display: block;
                position: relative;
                text-align: center;
                transition: 0.4s ease;
                cursor: pointer;
                &:hover {
                    background-color: col-black;
                    color: #fefefe;
                }
            }
        }
    }
}

@media screen and (max-width: 1200px) {
    #header {
        padding: 20px 0 10px;
        min-height: 0px;
        text-align: center;
        .header-inner {
            width: 100%;
        }
        #header-title {
            float: none;
        }
        #header-nav {
            float: none;
            ul {
                margin: 10px 0;
                li {
                    margin: 0;
                }
            }
        }
    }
}
