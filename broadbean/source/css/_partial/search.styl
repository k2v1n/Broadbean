.site-search {
    display: none;
    z-index: 2;
    position: fixed;
    top: 40px;
    left: 40px;
    right: 40px;
    bottom: 40px;
    background-color: #fff;
    box-shadow: 0 0 20px -5px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow-y: auto;
    text-align: center;
    padding: 20px;
    #local-search-input {
        border: 2px solid #00f;
        width: 80%;
        height: 30px;
        margin: 0 auto 20px;
        border-radius: 10px;
        padding: 10px;
        font-size: 1.25rem;
        outline: none;
    }
    #local-search-result {
        ul.search-result-list {
            li {
                list-style-type: none;
                .search-result-title {
                    font-size: 1.5rem;
                    font-weight: 700;
                }
                p.search-result {
                    text-align: left;
                    em.search-keyword {
                        font-size: 1.25rem;
                        color: #00f;
                        font-style: normal;
                    }
                }
            }
        }
    }
}

.hide-site-search {
    cursor: pointer;
    position: absolute;
    right: 20px;
    top: 20px;
    height: 50px;
    width: 50px;
    span {
        left: 23px;
        display: inline-block;
        width: 4px;
        height: 50px;
        background-color: #00f;
        position: absolute;
        transition: 0.4s ease;
    }
    & span:first-child {
        transform: rotate(45deg);
    }
    & span:last-child {
        transform: rotate(-45deg);
    }
    &:hover {
        span {
            background-color: #fa4;
        }
    }
}