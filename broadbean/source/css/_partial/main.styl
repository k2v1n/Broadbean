.main {
    letter-spacing: 0.05rem;
    margin-bottom: 20px;
    overflow: hidden;
    .show-toc {
        article {
            margin-left: 20px;
        }
    }
    .main-post {
        max-width: 1500px;
        margin: 0 auto;
        article a {
            color: #757575;
        }
    }
    .main-archives,
    .main-tags ,
    .main-categories  {
        .item {
            font-size: 1.125rem;
            margin-left: 20px;
        }
    }
    .main-tags ,
    .main-categories  {
        text-align: justify;
        a.category,
        a.tag {
            display: inline-block;
            margin: 10px;
        }
    }

}

.main article {
    max-width: 1100px;
    overflow: hidden;
    background-color: #fefefe;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    position: relative;
    border-radius: 2px;
    min-height: 130px;
    margin: 4px auto 10px;
    width: calc(100% - 400px);
    padding: 10px 10px 30px;
    a {
        position: relative;
        transition: 0.2s ease;
        &:after {
            position: absolute;
            content: "";
            width: 0;
            height: 1px;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            background-color: col-black;
            transition: 0.2s ease;
            
        }
        &:hover {
            color: col-black;
            &::after {
                width: 100%;
            }
        }
    }     
    img {
        display: block;
        margin: 0 auto;
        box-shadow: 0 0 2px rgba(0,0,0,0.1);
        max-width: 50%;
        max-height: 600px;
    }
    p.ab-light,
    p.ab-dark {
        padding: 4px 0;
        margin-left: -10px;
        margin-right: -10px;
    }
}

.post-toc {
    background-color: #fefefe;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    position: static;
    border-radius: 2px;
    z-index: 1;
    margin-right: 20px;
    float: right;
    max-height: calc(100% - 60px);
    overflow: auto;
    width: 320px;
    padding: 10px 0px;
    top: 10px;
    right: 20px;
    font-size: 0.875rem;
    a {
        transition: 0.1s linear;
        color: #222;
        &:hover {
            color: #757575;
        }
    }
    ol {
        transition: 1s linear;
        li {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            line-height: 1.5rem;
            list-style-type: none;
        }
    }

    .toc>.toc-item li {
        display: none;
    }
}

.pagination {
    clear: both;
    text-align: center;
    padding: 10px;
    margin: 20px auto;
    .space {
        padding: 0 10px;
    }
    .page-number,
    .next,
    .prev {
        background-color: fefefe;
        border-radius: 2px;
        vertical-align: middle;
        box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
        z-index: 1;
        line-height: 40px;
        text-align: center;
        display: inline-block;
        min-width: 40px;
        min-height: 40px;
        padding: 6px 10px;
        margin: 10px;
        &:hover {
            color: #fefefe;
            background-color: col-black;
        }
    }
    .current {
        background-color: col-black;
        color: #fff;
    }
}

@media screen and (max-width:1200px) {
    .main {
        .show-toc article,
        .hide-toc article,
        article {
            width: 800px;
            margin-left: auto;
            margin-right: auto;
        }
        .post-toc {
            display: none;
        }
    }
}

@media screen and (max-width:860px) {
    .main {
        .show-toc article,
        .hide-toc article,
        article {
            width: calc(100% - 40px);
            margin-left: 10px;
            margin-right: 10px;
        }
        .post-toc {
            display: none;
        }
    }
}