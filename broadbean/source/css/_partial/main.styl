.main {
    animation: fadeIn 0.2s linear;
    letter-spacing: 0.04rem;
    margin-bottom: 20px;
    overflow: hidden;
    .main-index {
        .cell {
            cursor: pointer;
        }
    }
    .main-post {
        max-width: 1600px;
        margin: 0 auto;
    }
    .show-toc {
        .cell {
            margin-left: 20px;
            margin-right: 0;
        }
    }
    .main-archives,
    .main-tags ,
    .main-categories  {
        .item {
            font-size: 1.125rem;
        }
    }
    .main-tags ,
    .main-categories  {
        text-align: justify;
        a.category,
        a.tag {
            display: inline-block;
            margin: 10px;
        }
    }
}

@keyFrames fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.main .cell {
    display: block;
    position: relative;
    margin: 10px auto;
    padding: 20px 20px 30px;
    width: calc(100% - 420px);
    max-width: 1200px;
    min-height: 130px;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    border-radius: 2px;
    .title,
    .post-meta {
        text-align: center;
    }
    a {
        position: relative;
        transition: 0.2s ease;
        &:after {
            position: absolute;
            content: "";
            width: 0;
            height: 1px;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            background-color: col-black;
            transition: 0.2s ease;
            
        }
        &:hover {
            color: col-black;
            &::after {
                width: 100%;
            }
        }
    }     
    img {
        margin: 0 auto;
        display: block;
    }
    p.ab-light,
    p.ab-dark {
        padding: 4px 0;
        margin-left: -10px;
        margin-right: -10px;
    }
}

main pre {
    font-size: 0.875rem;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
    margin: 10px -20px;
    padding: 10px 10px 10px 20px;
    line-height: 1.25rem;
    letter-spacing: normal;
    background-color: #f8f8f8;
    font-family: "Source Code Pro", "PingFang SC", "Microsoft YaHei", sans-serif;
    overflow: auto;
    code {
        font-family: inherit;
    }
}

main .highlight {
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
    margin: 10px -20px;
    overflow: auto;
    background-color: #f8f8f8;
    font-size: 0.875rem;
    figcaption {
        margin-left: 20px;
        padding: 4px;
    }
    table,
    tr,
    td {
        margin: 0;
        border: none;
        padding: 0;
    }
    pre {
        margin: 0;
        padding: 10px;
    }
    .gutter {
        width: 20px;
        /* text-align: right; */
        background-color: #f8f8f8;
        border: none;
        user-select: none;
        color: #757575;
        pre {
            padding-left: 20px;
            padding-right: 20px;
        }
    }
}

.main .post-toc {
    background-color: #fff;
    box-shadow: 0 0 2px rgba(0,0,0,0.1);
    position: static;
    border-radius: 2px;
    z-index: 1;
    margin-right: 20px;
    float: right;
    max-height: calc(100% - 60px);
    overflow: auto;
    width: 320px;
    padding: 10px 0px;
    top: 10px;
    right: 20px;
    font-size: 0.875rem;
    a {
        transition: 0.1s linear;
        color: #222;
        &:hover {
            color: #757575;
        }
    }
    ol {
        transition: 1s linear;
        li {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            line-height: 1.5rem;
            list-style-type: none;
        }
    }

    .toc>.toc-item li {
        display: none;
    }
}

.main .article-content {
    p, table, blockquote {
        a {
            color: #757575
        }
        a:before {
            content:  "\f0c1";
            margin-right: 4px;
            font-family: FontAwesome;
        }
    }
}

.main .pagination {
    clear: both;
    text-align: center;
    padding: 10px;
    margin: 20px auto;
    .space {
        padding: 0 10px;
    }
    .page-number,
    .next,
    .prev {
        background-color: #fff;
        border-radius: 2px;
        vertical-align: middle;
        box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        position: relative;
        z-index: 1;
        line-height: 40px;
        text-align: center;
        display: inline-block;
        min-width: 40px;
        min-height: 40px;
        padding: 6px 10px;
        margin: 10px;
        &:hover {
            color: #fefefe;
            background-color: col-black;
        }
    }
    .current {
        background-color: col-black;
        color: #fff;
    }
}

@media screen and (max-width:1200px) {
    .main {
        .show-toc .cell,
        .hide-toc .cell,
        .cell {
            width: 800px;
            margin-left: auto;
            margin-right: auto;
        }
        .post-toc {
            display: none;
        }
    }
}

@media screen and (max-width:860px) {
    .main {
        animation: none;
        .show-toc .cell,
        .hide-toc .cell,
        .cell {
            padding-left: 10px;
            padding-right: 10px;
            width: calc(100% - 40px);
            margin-left: 10px;
            margin-right: 10px;
        }
        .highlight {
            margin-left: -10px;
            margin-right: -10px;
        }
        .post-toc {
            display: none;
        }
    }
}